<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--    <context-param>-->
    <!--        <param-name>javax.faces.CONFIG_FILES</param-name>-->
    <!--        <param-value>/product.xhtml.xml</param-value>-->
    <!--    </context-param>-->

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>


    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
        <url-pattern>*.jsf</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>javax.faces.validator.ENABLE_VALIDATE_WHOLE_BEAN</param-name>
        <param-value>true</param-value>
    </context-param>

    <context-param>
        <param-name>javax.faces.ENABLE_CDI_RESOLVER_CHAIN</param-name>
        <param-value>true</param-value>
    </context-param>


    <welcome-file-list>
        <welcome-file>sc/welcome.xhtml</welcome-file>
    </welcome-file-list>

    <security-role>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <role-name>user1</role-name>
    </security-role>
    <security-role>
        <role-name>user2</role-name>
    </security-role>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin pages</web-resource-name>
            <url-pattern>/sc/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>user1 pages</web-resource-name>
            <url-pattern>/sc/user1/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user1</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>user2 pages</web-resource-name>
            <url-pattern>/sc/user2/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user2</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>